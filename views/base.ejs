<%- include('header') -%>


<div class="text-center center-div " id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Login for the existing user</span>
        </div>
        <form action="" >
            <div class="form-group ">
               <input type="email" class="form-control" placeholder="E-Mail" name="email">
               <small class="form-text text-muted text-left">Register E-mail Address</small> 
            </div>
            <div class="form-group mt-3">
               <input type="password" class="form-control" placeholder="Password" name="Password">
                
            </div>
            <button type="submit" class="btn btn-success mt-4 rounded-pill">Access</button>

        </form>
    </div>
</div>


<%- include('footer') -%>
